@model IEnumerable<DomainModels.Student>

@{
    ViewData["Title"] = "Student";
}
<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create New Student</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Firstname</th>
            <th>Surname</th>
            <th>Gender</th>
            <th>DOB</th>
            <th>Address 1</th>
            <th>Address 2</th>
            <th>Address 3</th>
            <th>Courses</th> <!-- New column for Courses -->
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Firstname</td>
                <td>@student.Surname</td>
                <td>@(student.Gender == 1 ? "Male" : "Female")</td>
                <td>@(student.DOB.ToShortDateString() ?? "N/A")</td>
                <td>@student.Address1</td>
                <td>@student.Address2</td>
                <td>@student.Address3</td>
                <td>
                    <ul>
                        @if (student.Courses != null)
                        {
                            @foreach (var studentCourse in student.Courses)
                            {
                                <li>@studentCourse.Name</li>
                            }
                        }
                    </ul>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@student.StudentId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@student.StudentId">Delete</a> |
                    <a asp-action="AssignCourses" asp-route-studentId="@student.StudentId">Assign Courses</a>
                </td>
            </tr>
        }
    </tbody>
</table>
