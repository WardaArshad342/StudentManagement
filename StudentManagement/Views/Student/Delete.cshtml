@model DomainModels.Student

@{
    ViewData["Title"] = "Delete Student";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this Student?</h3>
<div>
    <h4>Student: @Model.Firstname</h4>
    <dl class="row">
        <dt class="col-sm-2">Firstname</dt>
        <dd class="col-sm-10">@Model.Firstname</dd>
        <dt class="col-sm-2">Surname</dt>
        <dd class="col-sm-10">@Model.Surname</dd>
        <dt class="col-sm-2">Gender</dt>
        <dd class="col-sm-10">@Model.Gender</dd>
        <dt class="col-sm-2">DOB</dt>
        <dd class="col-sm-10">@Model.DOB.ToShortDateString()</dd>
        <dt class="col-sm-2">Address 1</dt>
        <dd class="col-sm-10">@Model.Address1</dd>
        <dt class="col-sm-2">Address 2</dt>
        <dd class="col-sm-10">@Model.Address2</dd>
        <dt class="col-sm-2">Address 3</dt>
        <dd class="col-sm-10">@Model.Address3</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="StudentId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
