@model DomainModels.Course

@{
    ViewData["Title"] = "Delete Course";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this course?</h3>
<div>
    <h4>Course: @Model.Name</h4>
    <dl class="row">
        <dt class="col-sm-2">Code</dt>
        <dd class="col-sm-10">@Model.Code</dd>
        <dt class="col-sm-2">Teacher</dt>
        <dd class="col-sm-10">@Model.TeacherName</dd>
        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.StartDate</dd>
        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@Model.EndDate</dd>
        @* <dd class="col-sm-10">@Model.EndDate.ToShortDateString()</dd> *@
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="CourseId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
