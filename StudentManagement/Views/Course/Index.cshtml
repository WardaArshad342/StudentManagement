@model IEnumerable<DomainModels.Course>

@{
    ViewData["Title"] = "Courses";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create New Course</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>Teacher</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Code</td>
                <td>@course.Name</td>
                <td>@course.TeacherName</td>
                <td>@(course.StartDate?.ToShortDateString() ?? "N/A")</td>
                <td>@(course.EndDate?.ToShortDateString() ?? "N/A")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@course.CourseId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@course.CourseId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
